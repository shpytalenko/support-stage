= form_for @reply, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :content, :class => 'control-label'
    .controls
      = f.text_area :content, :class => 'text_area'
  .control-group
    = f.label :author, :class => 'control-label'
    .controls
      = f.text_field :author, :class => 'text_field'
  .control-group
    = f.label :ticket_id, :class => 'control-label'
    .controls
      = f.collection_select(:ticket_id, Ticket.all, :id, :id)  
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), replies_path, :class => 'btn'
