- model_class = Reply
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:content) + ':'
  %br
  = @reply.content
%p
  %strong= model_class.human_attribute_name(:author) + ':'
  %br
  = @reply.author
%p
  %strong= model_class.human_attribute_name(:ticket_id) + ':'
  %br
  = @reply.ticket_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), replies_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_reply_path(@reply), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), reply_path(@reply), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
